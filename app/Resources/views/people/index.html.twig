{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Liste des Peoples
            </h1>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('people_new') }}">Créer un People</a>
        </li>
    </ul>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Nationalité</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td><a href="{{ path('people_show', { 'id': person.id }) }}">{{ person.lastname }}</a></td>
                <td>{{ person.firstname }}</td>
                <td>{% if person.dateOfBirth %}{{ person.dateOfBirth|date('Y-m-d') }}{% endif %}</td>
                <td>{{ person.nationality }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('people_show', { 'id': person.id }) }}">show</a>
                        </li>
                        <!--
                        <li>
                            <a href="{{ path('people_edit', { 'id': person.id }) }}">edit</a>
                        </li>
                        -->
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
