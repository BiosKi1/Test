{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Listes des films
        </h1>
    </div>
</div>
<ul>
    <li>
        <a href="{{ path('movie_new') }}">Créer un nouveau film</a>
    </li>
</ul>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Durée</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for movie in movies %}
        <tr>
            <td>{{ movie.id }}</td>
            <td><a href="{{ path('movie_show', { 'id': movie.id }) }}">{{ movie.title }}</a></td>
            <td>{{ movie.duration }} min.</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('movie_show', { 'id': movie.id }) }}">show</a>
                    </li>
                    <!--
                    <li>
                        <a href="{{ path('movie_edit', { 'id': movie.id }) }}">edit</a>
                    </li>-->
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
